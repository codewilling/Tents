    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">

            <a class="navbar-brand" href="/">Tents</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
                        <a href="/campgrounds" class="nav-link">Campgrounds</a>
                    </li>
                </ul>
                <% if(!currentUser){ %>
                    <ul class="navbar-nav">
                        <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
                            <a href="/register" class="nav-link">Sign-Up</a>
                        </li>
                        <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active': '' %>">
                            <a href="/login" class="nav-link">Login</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="search" placeholder="Search">
                        <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    <% } else{ %>
                        <span class="navbar-text text-light mr-auto">
                                Signed in as <%= currentUser.username %>
                        </span>
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/logout">Logout</a>
                            </li>
                        </ul>
                        <form class="form-inline my-2 my-lg-0">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search">
                                <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
                            </form>
                <% } %>
            </div>
    </nav>
