<% include ../partials/header %>

    <div class="row">
        <div class="col-lg">
            <h1 style="text-align: center">Edit <%=campgroundView.name%></h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/campgrounds/<%=campgroundView._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= campgroundView.name%>" name="campground[name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" value="<%= campgroundView.price%>" name="campground[price]" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= campgroundView.image%>" name="campground[image]">
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="text" value="<%= campgroundView.description%>" name="campground[description]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds/<%=campgroundView._id%>">Go Back</a>
            </div>
        </div>
    </div>

<% include ../partials/footer %>