<% include ../partials/header %>
    <% if(currentUser && currentUser.isAdmin){ %>
        <h1 id="adminHeader" class="float-center" text-align="center">Admin Mode</h1>
    <%}%>
        <header class="jumbotron">
            <div class="container">
                <h1><i class="material-icons md-48">landscape</i>Campgrounds</h1>
                <p>Curated List of Camping Sites</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Camp Site</a>
                </p>
            </div>
        </header>

        <div class="row text-center">
            <% campgroundsval.forEach(function(campsite){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="img-thumbnail">

                        <img class="img-fluid " src="<%= campsite["image"] %>">
                        <div class="caption">
                            <h5>
                                <%= campsite["name"] %>
                            </h5>
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campsite._id %>" class="btn btn-primary">More Info</a>
                        </p>

                    </div>
                </div>
            <% }); %>
        </div>

    <% include ../partials/footer %>