<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card" >
                <img class="card-img-top mx-auto" src="<%= campgroundsval.image %>">
                <div class="card-body">    
                    <h4 class="card-title d-inline-flex align-right">$9.00/night</h4>
                    <h4 class="card-title d-inline-flex align-left"><a href="#"><%= campgroundsval.name %></a></h4>
                    <div class="card-text">
                        <p><%= campgroundsval.description %></p>
                    </div>
                    <div><p><em>Submitted by: <%= campgroundsval.author.username %></em></p></div>
                    <% if(currentUser && campgroundsval.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/campgrounds/<%=campgroundsval._id%>/edit">Edit</a>
                        <form id="delete-form" action="/campgrounds/<%=campgroundsval._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="card bg-light mb-3 ">
                <div class="card-body">
                    <a href="/campgrounds/<%=campgroundsval._id%>/comments/new" class="btn btn-success text-right"> Add New Comment</a>
                </div>
                <hr>
                <% campgroundsval.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="text-right">10 days ago</span>
                            <p> 
                                <%= comment.text %>
                            </p>
                            <a href="/campgrounds/<%=campgroundsval._id%>/comments/<%=comment._id%>/edit" class="btn btn-sm btn-warning text-right">Edit Comment</a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>